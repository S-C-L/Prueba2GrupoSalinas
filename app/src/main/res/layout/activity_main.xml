<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.MainActivity">


    <TextView
        android:id="@+id/detalletextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:paddingStart="8dp"
        android:text="Buscar Personaje" />

    <TextView
        android:id="@+id/espaciotextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center"
        android:hint="Nombre del Personaje"
        android:inputType="text"
        android:text="" />


    <TextView
        android:id="@+id/espacio2textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />


    <Button
        android:id="@+id/buscarbutton"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Buscar" />

    <TextView
        android:id="@+id/espacio3textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reciclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>
